.main{
  height: 80%;
  padding-bottom: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip{
  width: 700rpx;
  padding: 20rpx;
  background-color: rgba(255,255,255,0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tip-title{
  color: black;
  font-size: 40rpx;
}
.tip-container{
  position: relative;
  text-align: center;
  width: 90%;
}
.tip-bg{
  width: 100%;
}
.tip-content{
  color: white;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}