.main{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.content .slogan{
  color: #606266;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 50rpx;
}
.logo-container, .logo{
  width: 400rpx;
  height: 400rpx;
}
.logo-container{
  position: relative;
}
.logo{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}

.footer .statistics{
  margin: 50rpx;
}