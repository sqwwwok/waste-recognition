.main{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.text-getter{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.7);
  z-index: 3;
}
.text-getter .form-container{
  width: 500rpx;
  border: 3rpx black solid;
  background-color:white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 20rpx;
}
.text-getter .form-container input{
  font-size: 50rpx;
  text-align: center;
  margin: 40px;
  border-bottom: 3rpx black solid;
}
.text-getter .form-container button{
  margin-bottom: 20rpx;
}

.photo-getter{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.photo-getter,.photo-border{
  width: 700rpx;
  height: 700rpx;
}
.photo-getter .photo-border{
  position: absolute;
}
.photo-getter .photo-container{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #cccccc;
  width: 400rpx;
  height: 300rpx;
  z-index: 2;
}
.photo-getter .photo-container .photo{
  width: 400rpx;
  height: 300rpx;
}
.photo-getter .photo-container .photo-tip{
  text-align: center;
  font-size: 60rpx;
  color: #606266;
}
.photo-getter .format-tip{
  z-index: 2;
  color: #606266;
  text-align: center;
}
.button-group button{
  margin-bottom: 40rpx;
}
.successed .result{
  text-align: center;
  font-weight: 800;
}
.successed .rank{
  margin-bottom: 120rpx;
}
.successed .rank button{
  margin-bottom: 50rpx;
}